<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!-- 指定了当前POM模型的版本，对于Maven2及Maven 3来说，它只能是4.0.0 -->
    <modelVersion>4.0.0</modelVersion>

    <!-- 项目公用模块(其实parent我也不太理解是什么意思，但是按照文档上来说，是一个组下多项目公用的配置) -->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.8.RELEASE</version>
        <relativePath/>
    </parent>

    <!-- 定义项目属于哪个组 -->
        <groupId>com.liang</groupId>
    <!-- 定义了当前项目在上面那个组中的唯一ID(一个组下面可以有多个项目) -->
    <artifactId>spring-admin</artifactId>
    <!-- 当前项目的版本 -->
    <version>0.0.1</version>
    <!-- 当前项目的简称 -->
    <name>spring-admin</name>
    <!-- 当前项目的描述 -->
    <description>common admin project for Spring Boot</description>

    <!-- 项目模块 -->
    <packaging>pom</packaging>

    <!-- 项目模块 -->
    <modules>
        <module>spring-core</module>
        <module>spring-admin</module>
    </modules>

    <!-- 一些特定变量进行声明 -->
    <properties>
        <java.version>1.8</java.version>
        <maven.test.skip>true</maven.test.skip>
        <druid.version>1.1.10</druid.version>
        <mybatis.version>1.3.2</mybatis.version>
        <mapper.version>2.1.0</mapper.version>
    </properties>

    <!-- 此项目所依赖的jar包(准确的说应该是构建) -->
    <dependencies>
        <!-- 引入spring boot测试包 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <!-- 统一管理项目的版本号 -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.liang</groupId>
                <artifactId>core</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- 使用profiles定义各环境的配置 -->
    <profiles>
        <profile>
            <!-- 本地开发环境 -->
            <!-- 环境id -->
            <id>local</id>
            <!-- 环境名称 -->
            <properties>
                <profilesActive>local</profilesActive>
            </properties>
            <!-- 默认开启 -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <!-- 产生的构件的文件名，默认值是${artifactId}-${version}-->
            <build>
                <finalName>${project.artifactId}-${project.version}</finalName>
            </build>
        </profile>
    </profiles>

    <!-- mvn打包的一些配置 -->
    <build>
        <!-- profile对资源的操作 -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>application*.yml</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <!-- 是否替换@xx@表示的maven properties属性值 -->
                <filtering>true</filtering>
                <includes>
                    <include>application.yml</include>
                    <include>application-${profilesActive}.yml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
